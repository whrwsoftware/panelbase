driver = sqlite
connect = /www/vmail/postfixadmin.db
default_pass_scheme = MD5-CRYPT
user_query = SELECT '/www/vmail/%d/%n' as home, 'maildir:/www/vmail/%d/%n' as mail, 150 AS uid, 8 AS gid, 'dirsize:storage=' || quota AS quota FROM mailbox WHERE username = '%u' AND active = 1
password_query = SELECT username as user, password, '/www/vmail/%d/%n' as userdb_home, 'maildir:/www/vmail/%d/%n' as userdb_mail, 150 as userdb_uid, 8 as userdb_gid FROM mailbox WHERE username = '%u' AND active = 1
